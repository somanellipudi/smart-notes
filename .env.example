# ============================================================================
# ENVIRONMENT CONFIGURATION - PRODUCTION LEVEL
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# See .gitignore for exclusion rules
# ============================================================================

# ============================================================================
# 1. ENVIRONMENT
# ============================================================================
ENVIRONMENT=development
# Options: development, staging, production
# Controls logging level, error handling, and feature flags

DEBUG=false
# Set to true for development with verbose logging

# ============================================================================
# 2. OPENAI API CONFIGURATION
# ============================================================================
OPENAI_API_KEY=sk-your-actual-api-key-here
OPENAI_ORG_ID=org-your-org-id-here
# Leave OPENAI_ORG_ID empty if not using organization

OPENAI_API_VERSION=2024-02-15
# API version for compatibility

OPENAI_MODEL_PRIMARY=gpt-4
# Primary model: gpt-4, gpt-4-turbo, gpt-3.5-turbo

OPENAI_MODEL_FALLBACK=gpt-3.5-turbo
# Fallback model for cost optimization or fallback

OPENAI_REQUEST_TIMEOUT=30
# Timeout in seconds for API requests

OPENAI_MAX_RETRIES=3
# Number of retries for failed requests

OPENAI_TEMPERATURE=0.3
# Temperature: 0.0 (deterministic) to 1.0 (creative)
# Lower = more focused, consistent
# Higher = more creative, varied

OPENAI_MAX_TOKENS=2000
# Maximum tokens per response

# ============================================================================
# 3. LANGCHAIN CONFIGURATION (If using LangChain)
# ============================================================================
LANGCHAIN_API_KEY=lk-your-langchain-key-here
# LangChain API key for tracing/monitoring

LANGCHAIN_PROJECT_ID=your-project-id-here
# LangChain project identifier

LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
# LangChain API endpoint

LANGCHAIN_TRACING_V2=true
# Enable LangChain tracing and monitoring

LANGCHAIN_CACHE_TYPE=in_memory
# Options: in_memory, redis, none

# ============================================================================
# 4. LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FORMAT=json
# Options: json, text, structured

LOG_OUTPUT=both
# Options: console, file, both

LOG_DIR=./logs
# Directory for log files

LOG_FILE_NAME=smart_notes_{date}.log
# Log file naming pattern
# {date} is replaced with YYYY-MM-DD

LOG_MAX_SIZE_MB=100
# Maximum size of log file before rotation (MB)

LOG_BACKUP_COUNT=10
# Number of backup log files to keep

LOG_RETENTION_DAYS=30
# Days to retain log files

LOG_INCLUDE_TIMESTAMP=true
# Include timestamps in logs

LOG_INCLUDE_TRACEBACK=true
# Include full traceback for errors

LOG_CONSOLE_ONLY_ERRORS=false
# If true, only errors shown in console (file gets all)

# ============================================================================
# 5. AUDIO PROCESSING
# ============================================================================
WHISPER_MODEL_SIZE=base
# Options: tiny, base, small, medium, large
# Larger = more accurate but slower
# tiny = fastest but least accurate

AUDIO_SAMPLE_RATE=16000
# Sample rate in Hz

MAX_AUDIO_DURATION=7200
# Maximum audio duration in seconds (2 hours)

AUDIO_CACHE_DIR=./cache/audio
# Directory for caching transcriptions

# ============================================================================
# 6. TEXT PROCESSING
# ============================================================================
MIN_SEGMENT_LENGTH=50
# Minimum characters per segment

MAX_SEGMENT_LENGTH=1000
# Maximum characters per segment

TOPIC_BOUNDARY_THRESHOLD=0.6
# Cosine similarity threshold for topic changes

ENABLE_SPELL_CHECK=true
# Enable spell checking in preprocessing

# ============================================================================
# 7. REASONING PIPELINE
# ============================================================================
MAX_TOPICS=10
# Maximum topics to extract

MAX_CONCEPTS_PER_TOPIC=8
# Maximum concepts per topic

MAX_FAQS=15
# Maximum FAQ items to generate

MAX_WORKED_EXAMPLES=5
# Maximum worked examples to extract

ENABLE_MULTI_STAGE_REASONING=true
# Enable multi-stage reasoning (set to false for single-stage)

# ============================================================================
# 8. EVALUATION & QUALITY THRESHOLDS
# ============================================================================
MIN_REASONING_CORRECTNESS=0.7
# Minimum reasoning correctness score (0-1)

MIN_STRUCTURAL_ACCURACY=0.8
# Minimum structural accuracy score (0-1)

MAX_HALLUCINATION_RATE=0.15
# Maximum acceptable hallucination rate (0-1)

MIN_EDUCATIONAL_USEFULNESS=3.5
# Minimum educational usefulness score (1-5)

ENABLE_STRICT_VALIDATION=true
# Enable strict output validation

# ============================================================================
# 9. CACHING & PERFORMANCE
# ============================================================================
ENABLE_CACHE=true
# Enable caching for API responses

CACHE_TYPE=file
# Options: file, redis, memory, none

CACHE_DIR=./cache/api_responses
# Cache directory

CACHE_TTL_HOURS=24
# Cache time-to-live in hours

REDIS_URL=redis://localhost:6379/0
# Redis connection URL (if using Redis cache)

# ============================================================================
# 10. DATABASE (If needed for future expansion)
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/smartnotes
# Database connection string

DATABASE_POOL_SIZE=10
# Connection pool size

DATABASE_ECHO_SQL=false
# Log all SQL queries (development only)

# ============================================================================
# 11. SECURITY
# ============================================================================
SECURE_MODE=true
# Enable security features

ALLOW_CORS_ORIGINS=http://localhost:8501,http://localhost:3000
# Comma-separated list of allowed origins

SESSION_TIMEOUT_MINUTES=60
# Session timeout in minutes

ENCRYPT_SENSITIVE_DATA=true
# Encrypt API keys and sensitive data in logs

# ============================================================================
# 12. MONITORING & TELEMETRY
# ============================================================================
ENABLE_TELEMETRY=true
# Enable usage tracking and telemetry

TELEMETRY_ENDPOINT=https://telemetry.smartnotes.ai
# Telemetry service endpoint

SENTRY_DSN=
# Sentry error tracking DSN (leave empty to disable)

# ============================================================================
# 13. STREAMLIT UI CONFIGURATION
# ============================================================================
STREAMLIT_SERVER_PORT=8501
# Streamlit server port

STREAMLIT_SERVER_ADDRESS=localhost
# Streamlit server address

STREAMLIT_MAX_UPLOAD_SIZE_MB=200
# Maximum upload size in MB

STREAMLIT_LOGGER_LEVEL=info
# Streamlit logger level

# ============================================================================
# 14. RESEARCH & TESTING
# ============================================================================
# Use mock LLM responses for testing/demo

MOCK_RESPONSE_DELAY_SECONDS=2
# Simulate processing delay in mock mode

ENABLE_TESTING_MODE=false
# Enable testing-specific features

TEST_DATA_DIR=./test_data
# Directory containing test data

# ============================================================================
# 15. FEATURE FLAGS
# ============================================================================
FEATURE_MULTI_LANGUAGE=false
# Support multiple languages

FEATURE_REAL_TIME_PROCESSING=false
# Enable real-time processing streaming

FEATURE_STUDY_GUIDE_GENERATION=true
# Enable cumulative study guide generation

FEATURE_EXPORT_TO_FORMATS=true
# Enable export to PDF, DOCX, etc.

# ============================================================================
# 16. NOTIFICATION & ALERTS
# ============================================================================
ENABLE_NOTIFICATIONS=false
# Enable email/webhook notifications

NOTIFICATION_EMAIL=admin@smartnotes.ai
# Email for notifications

WEBHOOK_URL=
# Webhook URL for alerts (leave empty to disable)

# ============================================================================
# 17. PERFORMANCE TUNING
# ============================================================================
NUM_WORKERS=4
# Number of worker processes

BATCH_SIZE=32
# Batch size for processing

ENABLE_GPU_ACCELERATION=false
# Enable GPU acceleration (if available)

# ============================================================================
# 18. EXPORT & OUTPUT
# ============================================================================
OUTPUT_DIR=./outputs
# Directory for generated outputs

OUTPUT_FORMATS=json,pdf,markdown
# Comma-separated: json, pdf, markdown, docx, html

INCLUDE_METADATA_IN_EXPORT=true
# Include processing metadata in exports

# ============================================================================
# 19. API RATE LIMITING (If deploying as API)
# ============================================================================
RATE_LIMIT_ENABLED=false
# Enable rate limiting

RATE_LIMIT_REQUESTS_PER_MINUTE=60
# Requests per minute per client

RATE_LIMIT_STORAGE=memory
# Options: memory, redis, database

# ============================================================================
# 20. VERSION & BUILD INFO
# ============================================================================
APP_VERSION=0.1.0
# Application version

BUILD_DATE=2026-01-31
# Build date

GIT_COMMIT_SHA=
# Git commit SHA for tracking

# ============================================================================
# NOTES FOR PRODUCTION DEPLOYMENT
# ============================================================================
# 1. NEVER commit .env to version control
# 2. Use .env.example as template for documentation
# 3. Rotate API keys regularly
# 4. Use secrets management (AWS Secrets Manager, HashiCorp Vault)
# 5. Monitor log files for errors and security issues
# 6. Set up log rotation to prevent disk space issues
# 7. Use environment-specific configs (dev, staging, prod)
# 8. Enable encryption for sensitive data in transit
# 9. Implement proper error handling and monitoring
# 10. Regular backup of logs and data
# ============================================================================
